<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         <servlet>
         	<servlet-name>search</servlet-name>
         	<servlet-class>com.Game.SearchGameServlet</servlet-class>
         </servlet>
         
         <servlet-mapping> 
         	<servlet-name>search</servlet-name>
         	<url-pattern>/search</url-pattern>
         </servlet-mapping>
         
         <servlet>
         	<servlet-name>add</servlet-name>
         	<servlet-class>com.Game.AddGameServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         	<servlet-name>add</servlet-name>
         	<url-pattern>/addGame</url-pattern>
         </servlet-mapping>
         
         <servlet>
         	<servlet-name>updateGame</servlet-name>
         	<servlet-class>com.Game.UpdateGameServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         	<servlet-name>updateGame</servlet-name>
         	<url-pattern>/update</url-pattern>
         </servlet-mapping>
         
         <servlet>
			<servlet-name>deleteGame</servlet-name>         
			<servlet-class>com.Game.DeleteGameServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
         	<servlet-name>deleteGame</servlet-name>         
         	<url-pattern>/delete</url-pattern>
         </servlet-mapping>
</web-app>